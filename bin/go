#!/usr/bin/env ruby

require_relative "../lib/display"
require_relative "../lib/grid"
require_relative "../lib/seed_parser"
require_relative "../lib/game"


require 'trollop'

opts = Trollop::options do
  opt :evolutions, "Number of evolutions to perform", :default => 10
  opt :seedFile, "Location of input seed file, example: ../../config/config.yml", :default => "#{__FILE__}/../../input/beacon.txt"
  opt :seedRandom, "Should seed randomly?", :default => false
end

def run_command opts
  seed = SeedParser.new(opts[:seedFile])
  seedGrid = Grid.new(seed.cells)
  Display.new(Game.new(seedGrid, opts[:evolutions])).display
end

run_command(opts)
