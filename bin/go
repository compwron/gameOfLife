#!/usr/bin/env ruby

require_relative "../lib/display"
require_relative "../lib/grid"
require_relative "../lib/seed_parser"

unless ARGV.size == 1
  puts "Usage: ./bin/go numberOfEvolutions pathToSeedFile "
  exit
end

evolutions = ARGV[0]
seed_file = ARGV[1]
seed = SeedParser.new(seed_file)
Display.new(Grid.new(seed).evolve(evolutions)).display
