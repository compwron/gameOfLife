#!/usr/bin/env ruby

require_relative "../lib/display"
require_relative "../lib/grid"
require_relative "../lib/seed_parser"
require_relative "../lib/game"

unless ARGV.size == 2
  puts "Usage: ./bin/go numberOfEvolutions pathToSeedFile "
  exit
end

evolutions = ARGV[0].to_i
seed_file = ARGV[1]

seed = SeedParser.new(seed_file)
seedGrid = Grid.new(seed.cells)
Display.new(Game.new(seedGrid, evolutions)).display
